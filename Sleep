<body>
  <h2>Sleep Debt Calculator</h2>

  <p><strong>Participant Name:</strong><br>
  <input type="text" id="participant" placeholder="Enter your name" /></p>

  <p><strong>Select the hours you slept each night for the past 7 days:</strong></p>
  
  <div id="sleep-inputs">
    <div class="sleep-row"><label>Monday:</label><div class="scale-container" data-day="mon"><div class="tracker"></div></div><span class="sleep-value" id="monVal">1</span> hrs</div>
    <div class="sleep-row"><label>Tuesday:</label><div class="scale-container" data-day="tue"><div class="tracker"></div></div><span class="sleep-value" id="tueVal">1</span> hrs</div>
    <div class="sleep-row"><label>Wednesday:</label><div class="scale-container" data-day="wed"><div class="tracker"></div></div><span class="sleep-value" id="wedVal">1</span> hrs</div>
    <div class="sleep-row"><label>Thursday:</label><div class="scale-container" data-day="thu"><div class="tracker"></div></div><span class="sleep-value" id="thuVal">1</span> hrs</div>
    <div class="sleep-row"><label>Friday:</label><div class="scale-container" data-day="fri"><div class="tracker"></div></div><span class="sleep-value" id="friVal">1</span> hrs</div>
    <div class="sleep-row"><label>Saturday:</label><div class="scale-container" data-day="sat"><div class="tracker"></div></div><span class="sleep-value" id="satVal">1</span> hrs</div>
    <div class="sleep-row"><label>Sunday:</label><div class="scale-container" data-day="sun"><div class="tracker"></div></div><span class="sleep-value" id="sunVal">1</span> hrs</div>
  </div>

  <p><strong>Ideal Sleep Hours per Night:</strong> 7 hours</p>

  <button onclick="calculateSleepDebt()">Submit & Calculate</button>

  <div class="result" id="result"></div>
  <div id="zoneMessage"></div>

  <canvas id="sleepChart"></canvas>

  <script>
    // Tracker logic
    const min = 1, max = 9;
    const trackers = document.querySelectorAll(".scale-container");

    trackers.forEach(container => {
      const tracker = container.querySelector(".tracker");
      const day = container.getAttribute("data-day");
      const output = document.getElementById(day + "Val");
      let dragging = false;

      tracker.addEventListener("mousedown", () => dragging = true);
      document.addEventListener("mouseup", () => dragging = false);

      document.addEventListener("mousemove", e => {
        if (!dragging) return;
        const rect = container.getBoundingClientRect();
        let offsetX = e.clientX - rect.left;
        if (offsetX < 0) offsetX = 0;
        if (offsetX > rect.width) offsetX = rect.width;

        tracker.style.left = `${(offsetX / rect.width) * 100}%`;
        const ratio = offsetX / rect.width;
        const hours = Math.round(min + ratio * (max - min));
        output.textContent = hours;
      });
    });

    function calculateSleepDebt() {
      const participant = document.getElementById('participant').value.trim();
      if (!participant) {
        alert("Please enter your name before submitting.");
        return;
      }

      const ideal = 7; // fixed value
      let totalDebt = 0;
      let totalSleep = 0;
      let dailySleep = [];
      const days = ['mon','tue','wed','thu','fri','sat','sun'];
      const dayLabels = ['Monday','Tuesday','Wednesday','Thursday','Friday','Saturday','Sunday'];

      for (let i = 0; i < days.length; i++) {
        const slept = parseFloat(document.getElementById(days[i] + "Val").textContent) || 0;
        dailySleep.push(slept);
        totalSleep += slept;
        const debt = ideal - slept;
        if (debt > 0) totalDebt += debt;
      }

      const resultDiv = document.getElementById('result');
      resultDiv.innerHTML = `<strong>${participant}</strong>, your total sleep debt for the past week is <strong>${totalDebt.toFixed(1)} hours</strong>.`;

      if (totalDebt > 0) {
        const recovery = (totalDebt / days.length).toFixed(1);
        resultDiv.innerHTML += `<br>Suggested extra sleep per night to recover: <strong>${recovery} hours</strong>.`;
      } else {
        resultDiv.innerHTML += `<br>Great! You're keeping up with your ideal sleep.`;
      }

      const zoneDiv = document.getElementById('zoneMessage');
      zoneDiv.className = "zone-message";

      if (totalSleep < 29) {
        zoneDiv.classList.add("red-zone");
        zoneDiv.textContent = "Very little sleep — high risk of sleep deprivation and serious health impacts.";
      } else if (totalSleep >= 30 && totalSleep <= 48) {
        zoneDiv.classList.add("yellow-zone");
        zoneDiv.textContent = "Some rest, but still below the recommended amount — may lead to fatigue, lower focus, and long-term health risks.";
      } else if (totalSleep >= 49) {
        zoneDiv.classList.add("green-zone");
        zoneDiv.textContent = "Healthy sleep range — supports good health, mood, learning, and overall performance.";
      }

      // Chart.js visualization
      const ctx = document.getElementById('sleepChart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: dayLabels,
          datasets: [
            {
              label: 'Hours Slept',
              data: dailySleep,
              backgroundColor: 'rgba(75, 192, 192, 0.6)'
            },
            {
              label: 'Ideal Sleep (7 hrs)',
              data: Array(days.length).fill(ideal),
              type: 'line',
              borderColor: 'rgba(255, 99, 132, 0.8)',
              borderWidth: 2,
              fill: false
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            y: { beginAtZero: true, max: 12 }
          },
          plugins: {
            legend: { position: 'top' },
            title: { display: true, text: 'Sleep vs Ideal Sleep (7 Days)' }
          }
        }
      });
    }
  </script>
</body>
